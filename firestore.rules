rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write;
    }
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && request.resource.data.keys().hasOnly(['likeCount', 'viewCount']);

      match /likes/{userId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId && !exists(/databases/$(database)/documents/posts/$(postId)/likes/$(userId));
      }
    }
  }
}
